{
  "compilerOptions": {
    "target": "es2019",
    "types": ["node", "jest"],
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "build/**"]
}